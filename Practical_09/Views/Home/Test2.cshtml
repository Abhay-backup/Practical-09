
@{
	ViewBag.Title = "Test2";
}

@*<h2>Test2</h2>*@

<main aria-labelledby="title">
	<h2 id="title">@ViewBag.Title</h2>

	<div>
		<button class="btn btn-outline-info" onclick="printText()">PRINT TEXT</button>
		<button class="btn btn-outline-primary" onclick="bold()">BOLD</button>
		<button class="btn btn-outline-secondary" onclick="italic()">ITALIC</button>
		<button class="btn btn-outline-success" onclick="underline()">UNDERLINE</button>
		<button class="btn btn-outline-danger" onclick="reset()">RESET</button>
	</div>

	<h1 id="textMsg"></h1>

	<script>
        function printText() {
            document.getElementById("textMsg").innerHTML = "@ViewBag.Message";
            document.getElementById("textMsg").removeAttribute("style");
        }

        function bold() {
            document.getElementById("textMsg").removeAttribute("style");
            document.getElementById("textMsg").style.fontWeight = "bold";
        }

        function italic() {
            document.getElementById("textMsg").removeAttribute("style");
            document.getElementById("textMsg").style.fontStyle = "italic";
        }

        function underline() {
            document.getElementById("textMsg").removeAttribute("style");
            document.getElementById("textMsg").style.textDecoration = "underline";
        }

        function reset() {
            document.getElementById("textMsg").removeAttribute("style");
        }
	</script>
</main>

